<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"
    tools:context="com.ringthedoctor.Diet_Plan">


    <RelativeLayout
        android:id="@+id/breakfast"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible">

        <ImageView
            android:paddingBottom="5dp"
            android:id="@+id/button_breakfast"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/breakfast" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lunch"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/breakfast"
        android:visibility="visible"
        android:layout_toRightOf="@+id/breakfast">

        <ImageView
            android:paddingBottom="5dp"
            android:id="@+id/button_launch"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/lunch"
            android:text="Launch Schedule" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dinner"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/lunch"
        android:visibility="visible"
        android:layout_toRightOf="@+id/lunch">

        <ImageView
            android:paddingBottom="5dp"
            android:id="@+id/button_dinner"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/dinner"
            android:text="Dinner Schedule" />
    </RelativeLayout>

    <ListView
        android:id="@+id/recipe_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/breakfast"
        android:dividerHeight="10dp" />
</RelativeLayout>

